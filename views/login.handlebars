<body>
  <div class="row">
    <div class="col-md-6">

      <h2>Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </form>
    </div>
  </div>

  <div class="col-md-6">

    <h2>Signup</h2>
    Sign up as a:

    <div class="custom-control custom-radio custom-control-inline">
      <input type="radio" id="nannyUser" name="userRadio" class="custom-control-input" value="nanny">
      <label class="custom-control-label" for="customRadioInline1">Nanny</label>
    </div>
    <div class="custom-control custom-radio custom-control-inline">
      <input type="radio" id="parentUser" name="userRadio" class="custom-control-input" value="parent">
      <label class="custom-control-label" for="customRadioInline2">Parent</label>
    </div>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="username" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="userEmail" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="userPassword" type="password" id="password-signup" />
      </div>

      <form>
        <div class="form-group">
          <label for="profilePicture">Upload your profile pic:</label>
          <input type="file" class="userProfilePic" id="ProfilePic">
        </div>
      </form>

      <div class="form-group">
        <label for="biography">Tell us about yourself:</label>
        <textarea class="userBio" id="exampleFormControlTextarea1" rows="3"></textarea>
      </div>

      {{#if parent}}
      <div class="form-group">
        <label for="exampleFormControlSelect1">How many kids do you have?</label>
        <select class="form-control" id="numberOfKids">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5 +</option>
        </select>
      </div>


      {{#if nanny}}
      <select class="form-control">
        <option>How old are you?</option>
        <option>18-21</option>
        <option>22-25</option>
        <option>26 +</option>
      </select>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Years of experience</label>
        <select class="form-control" id="exampleFormControlSelect1">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5 +</option>
        </select>
      </div>

      <input class="form-control" type="text"
        placeholder="What certifications do you have? ie. college degrees, CPR certified. ">

      <input class="form-control" type="text" placeholder="Hourly rate">

      <input class="form-control" type="text" placeholder="Age range most experienced with">


    </form>
  </div>

  <script src="/public/js/login.js"></script>
</body>

</html>